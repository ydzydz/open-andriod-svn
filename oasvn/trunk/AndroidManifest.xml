<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.valleytg.oasvn.android"
    android:versionCode="8"
    android:versionName="1.0.7" >

    <uses-sdk android:minSdkVersion="8" android:targetSdkVersion="14"/>
	<uses-permission android:name="android.permission.INTERNET"></uses-permission>
	<uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <application
        android:name=".application.OASVNApplication"
        android:debuggable="true"
        android:icon="@drawable/oasvn_icon"
        android:label="@string/app_name" >
        <activity
            android:name=".ui.activity.MainMenu"
            android:label="@string/app_name" 
            android:configChanges="keyboardHidden|orientation">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.activity.AddRepository" 
            android:label="@string/app_name" 
            android:configChanges="orientation|keyboardHidden|screenSize" />
        <activity android:name=".ui.activity.LogView" 
            android:label="@string/app_name" 
            android:configChanges="orientation|keyboardHidden|screenSize" />
        <activity android:name=".ui.activity.LogDetails" 
            android:label="@string/app_name" 
            android:configChanges="orientation|keyboardHidden|screenSize" />
        <activity android:name=".ui.activity.Revisions" 
            android:label="@string/app_name" 
            android:configChanges="orientation|keyboardHidden|screenSize" />
         <activity android:name=".ui.activity.RevisionDetails" 
            android:label="@string/app_name" 
            android:configChanges="orientation|keyboardHidden|screenSize" />
        <activity android:name=".ui.activity.ConnectionDetails" 
            android:label="@string/app_name" 
            android:configChanges="orientation|keyboardHidden|screenSize" />
        <activity android:name=".ui.activity.CommitActivity" 
            android:label="@string/app_name" 
            android:configChanges="orientation|keyboardHidden|screenSize" />
    </application>

</manifest>